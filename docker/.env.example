# ===========================================
# Qing 微服务 Docker Compose 环境配置
# ===========================================
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# 版本配置
# ===========================================
QING_VERSION=latest

# ===========================================
# 数据库配置 (PostgreSQL)
# ===========================================
POSTGRES_DB=qing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin@123456
POSTGRES_PORT=5432

# ===========================================
# Redis 配置
# ===========================================
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Consul 配置
# ===========================================
CONSUL_PORT=8500

# ===========================================
# MinIO 对象存储配置
# ===========================================
MINIO_ROOT_USER=qingminio
MINIO_ROOT_PASSWORD=qingminio123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ===========================================
# RabbitMQ 配置
# ===========================================
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ===========================================
# Git 配置 (用于配置中心)
# ===========================================
GIT_USER=
GIT_PASS=

# ===========================================
# JWT 配置
# ===========================================
JWT_SECRET=qingSecretKey
JWT_EXPIRATION=18000

# ===========================================
# 服务端口配置
# ===========================================
# 配置中心
CONFIG_SERVER_PORT=8888

# Eureka 注册中心
EUREKA_PORT=8761

# API 网关
GATEWAY_PORT=9527

# 认证服务
AUTH_SERVICE_PORT=8088

# 动漫服务
ANIME_SERVICE_PORT=8080

# SA-Token 服务
SA_TOKEN_SERVICE_PORT=8089

# 聚合接口服务
AGGREGATE_SERVICE_PORT=8090

# 监控服务
MONITOR_PORT=10086

# 消息总线服务
BUS_SERVER_PORT=8071

# ===========================================
# 环境配置文件 (Profile)
# ===========================================
CONFIG_PROFILE=prod
EUREKA_PROFILE=prod
GATEWAY_PROFILE=prod
AUTH_PROFILE=prod
ANIME_PROFILE=prod
SA_TOKEN_PROFILE=prod
AGGREGATE_PROFILE=prod
MONITOR_PROFILE=prod
BUS_PROFILE=prod